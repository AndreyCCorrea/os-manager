      "destructive": {
        "background": "transparent",
        "backgroundHover": "#FEF2F2",
        "color": "#DC2626",
        "border": "1px solid #FCA5A5",
        "height": "40px",
        "padding": "0 16px",
        "borderRadius": "6px",
        "fontWeight": "500",
        "fontSize": "14px",
        "description": "Botão destrutivo (Deletar)"
      },
      "ghost": {
        "background": "transparent",
        "backgroundHover": "#F9FAFB",
        "color": "#6B7280",
        "height": "36px",
        "padding": "0 8px",
        "borderRadius": "6px",
        "description": "Botão discreto para ações terciárias"
      }
