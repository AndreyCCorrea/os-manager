{
  "designSystem": {
    "name": "Dashboard Ordens de Serviço - Design System",
    "version": "1.0",
    "description": "Sistema de design para gestão de ordens de serviço com foco em urgência, status visual e ações rápidas",
    "scope": "Main content area only - sidebar já está finalizada"
  },

  "designPrinciples": {
    "statusVisibility": "Hierarquia visual clara de urgência através de cores semânticas e indicadores visuais",
    "actionOriented": "Design focado em ações rápidas com botões contextuais e operações em lote",
    "dataHierarchy": "Informações críticas (número da ordem, cliente, status) em destaque visual",
    "timeAwareness": "Sistema de alerta de prazos com código de cores intuitivo",
    "workflow": "Interface otimizada para o fluxo de trabalho diário de técnicos e gestores"
  },

