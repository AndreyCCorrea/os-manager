        "borderBottom": "2px solid #E5E7EB",
        "marginTop": "16px",
        "description": "Container de tabs para filtros rápidos"
      },
      "tab": {
        "height": "44px",
        "padding": "0 16px",
        "fontSize": "14px",
        "fontWeight": "500",
        "background": "transparent",
        "border": "none",
        "borderBottom": "2px solid transparent",
        "marginBottom": "-2px",
        "transition": "all 150ms ease",
        "cursor": "pointer",
        "description": "Tab individual"
      },
      "tabActive": {
        "fontWeight": "600",
        "color": "#3B82F6",
        "borderBottom": "2px solid #3B82F6",
        "background": "#FFFFFF",
        "description": "Estado ativo da tab"
      },
      "tabInactive": {
        "color": "#6B7280",
        "hoverBackground": "#F9FAFB",
        "description": "Estado inativo com hover"
      }
    },

    "buttons": {
      "primary": {
        "background": "#F97316",
        "backgroundHover": "#EA580C",
        "backgroundActive": "#C2410C",
        "color": "#FFFFFF",
        "height": "40px",
        "padding": "0 20px",
        "borderRadius": "6px",
        "fontWeight": "500",
        "fontSize": "14px",
        "shadow": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
