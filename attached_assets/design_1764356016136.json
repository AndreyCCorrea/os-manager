  },

  "spacing": {
    "scale": {
      "xs": "4px",
      "sm": "8px",
      "md": "12px",
      "lg": "16px",
      "xl": "24px",
      "2xl": "32px",
      "3xl": "48px",
      "description": "Escala de espaçamento em múltiplos de 4px"
    },
    "componentSpacing": {
      "tableRowHeight": "72px",
      "tableRowPadding": "16px 20px",
      "headerHeight": "96px",
      "tabBarHeight": "44px",
      "selectionBarHeight": "56px",
      "pageContentPadding": "24px",
      "description": "Altura maior nas linhas para acomodar conteúdo composto"
