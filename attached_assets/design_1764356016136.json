    "internalSpacing": {
      "stackedContentGap": "4px",
      "badgeInternalPadding": "4px 10px",
      "iconTextGap": "6px",
      "buttonGroupGap": "8px",
      "description": "Espaçamentos internos de componentes compostos"
    }
  },

  "layout": {
    "mainContent": {
      "note": "SIDEBAR JÁ ESTÁ PRONTA - Foco apenas no main content",
      "padding": "24px",
      "background": "#F8F9FA",
      "maxWidth": "none",
      "description": "Área de conteúdo principal"
    },
    "header": {
      "marginBottom": "24px",
      "justifyContent": "space-between",
      "alignItems": "flex-start",
      "gap": "16px",
      "description": "Header com título, tabs e actions"
    },
    "grid": {
      "columns": 12,
      "gutter": "24px",
      "description": "Grid para organização interna"
    }
  },

