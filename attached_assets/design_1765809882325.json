        "description": "Blocos de tempo proporcionais na semana"
      },
      "dayView": {
        "format": "Full event details with description",
        "expandable": true,
        "description": "Detalhes completos na visão diária"
      },
      "listView": {
        "format": "Time | Indicator | Title + Meta",
        "grouping": "By date",
        "description": "Lista cronológica com agrupamento por data"
      }
    },

    "colorUsage": {
      "consistency": "Sempre usar a mesma cor para a mesma categoria",
      "contrast": "Garantir legibilidade do texto sobre backgrounds coloridos",
      "accessibility": "Não depender apenas de cor, usar também ícones e texto",
      "description": "Regras de uso do sistema de cores"
    },

    "emptyState": {
      "icon": {
        "name": "Calendar",
        "size": "64px",
        "color": "#D1D5DB"
      },
      "title": "Nenhum evento agendado",
      "description": "Comece adicionando seu primeiro evento",
      "action": "Botão 'Adicionar Evento'",
      "centered": true,
      "padding": "64px 24px",
      "description": "Estado vazio do calendário"
