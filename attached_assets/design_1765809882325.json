  "eventCategories": {
    "categorization": {
      "method": "Por tipo de atividade",
      "userCustomizable": true,
      "defaultCategories": [
        "Regular/Standup",
        "One-on-one",
        "Team Meeting",
        "Work Session",
        "Social/Lunch",
        "Important/Deadline",
        "Presentation/Demo"
      ]
    },
    "visualDifferentiation": {
      "color": "Background + text color",
