  "spacing": {
    "scale": {
      "xs": "4px",
      "sm": "8px",
      "md": "12px",
      "lg": "16px",
      "xl": "24px",
      "2xl": "32px",
      "3xl": "48px",
      "description": "Escala de espaçamento em múltiplos de 4px"
    },
    "layout": {
      "pageContentPadding": "24px",
      "maxContentWidth": "800px",
      "cardGap": "24px",
      "headerMarginBottom": "32px",
      "description": "Espaçamentos de layout principal"
    },
    "card": {
      "padding": "24px",
      "borderRadius": "8px",
      "headerMarginBottom": "20px",
      "actionsGap": "8px",
      "description": "Espaçamentos internos do card"
    },
    "cardHeader": {
      "iconSize": "48px",
      "iconMarginRight": "16px",
      "titleDescriptionGap": "4px",
      "description": "Espaçamentos do header horizontal"
    },
    "button": {
      "height": "44px",
      "padding": "0 16px",
      "iconLabelGap": "12px",
      "description": "Espaçamentos dos botões"
    },
    "settingRow": {
      "padding": "12px 16px",
      "gap": "12px",
      "iconLabelGap": "12px",
      "description": "Espaçamentos das linhas de configuração"
    }
  },

  "layout": {
    "mainContent": {
      "note": "SIDEBAR JÁ ESTÁ PRONTA - Foco apenas no main content",
      "padding": "24px",
      "background": "#F8F9FA",
      "description": "Área de conteúdo principal"
    },
    "contentContainer": {
      "maxWidth": "800px",
      "margin": "0 auto",
      "display": "flex",
      "flexDirection": "column",
      "gap": "24px",
      "description": "Container centralizado para cards"
    },
    "responsive": {
      "mobile": {
        "maxWidth": "100%",
        "padding": "16px",
        "description": "Mobile: full width com padding reduzido"
      },
      "tablet": {
        "maxWidth": "600px",
        "padding": "24px",
        "description": "Tablet: largura intermediária"
      },
      "desktop": {
        "maxWidth": "800px",
        "padding": "24px",
        "description": "Desktop: largura máxima de 800px"
      }
    }
  },

  "components": {
    "settingsCard": {
      "container": {
        "width": "100%",
        "background": "#FFFFFF",
        "border": "1px solid #E5E7EB",
        "borderRadius": "8px",
        "padding": "24px",
        "shadow": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
        "transition": "all 150ms ease",
        "description": "Card full-width empilhado verticalmente"
      },
      "hover": {
        "borderColor": "#D1D5DB",
        "shadow": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
        "description": "Hover sutil sem lift"
      }
    },

    "cardHeader": {
      "layout": "horizontal",
      "display": "flex",
      "alignItems": "center",
      "marginBottom": "20px",
      "gap": "16px",
      "description": "Header horizontal com ícone à esquerda"
    },

    "iconContainer": {
      "size": "48px",
      "borderRadius": "12px",
      "display": "flex",
      "alignItems": "center",
      "justifyContent": "center",
      "flexShrink": "0",
      "description": "Container quadrado 48x48px"
    },

    "icon": {
      "size": "24px",
      "strokeWidth": "2px",
      "description": "Ícone Lucide 24px dentro do container"
    },

    "headerText": {
      "flex": "1",
      "display": "flex",
      "flexDirection": "column",
      "gap": "4px",
      "description": "Container de texto ao lado do ícone"
    },

    "navigationButton": {
      "base": {
        "width": "100%",
        "height": "44px",
        "padding": "0 16px",
        "background": "#FFFFFF",
        "backgroundHover": "#F9FAFB",
        "backgroundActive": "#F3F4F6",
        "border": "1px solid #E5E7EB",
        "borderRadius": "6px",
        "display": "flex",
        "alignItems": "center",
        "justifyContent": "space-between",
        "cursor": "pointer",
        "transition": "all 150ms ease",
        "description": "Botão navegacional full-width"
      },
      "leftContent": {
        "display": "flex",
        "alignItems": "center",
        "gap": "12px"
      },
      "icon": {
        "size": "20px",
        "color": "#6B7280",
        "strokeWidth": "2px"
      },
      "label": {
        "fontSize": "14px",
        "fontWeight": "500",
        "color": "#374151"
      },
      "rightContent": {
        "display": "flex",
        "alignItems": "center",
        "gap": "8px"
      },
      "chevron": {
        "size": "20px",
        "color": "#9CA3AF"
      },
      "externalLink": {
        "size": "18px",
        "color": "#9CA3AF",
        "description": "Ícone menor para links externos"
      }
    },

    "badge": {
      "base": {
        "padding": "2px 8px",
        "borderRadius": "10px",
        "fontSize": "12px",
        "fontWeight": "500",
        "display": "inline-flex",
        "alignItems": "center",
        "gap": "4px",
        "whiteSpace": "nowrap"
      },
      "counter": {
        "minWidth": "20px",
        "textAlign": "center",
        "description": "Badge para contadores (ex: 12 usuários)"
      },
      "status": {
        "description": "Badge para status (Online, Desativado, etc)"
      },
      "withDot": {
        "gap": "4px",
        "dotSize": "6px",
        "dotBorderRadius": "50%",
        "description": "Badge com dot indicador"
      }
    },

    "planDisplay": {
      "container": {
        "background": "#FFFBEB",
        "border": "1px solid #FDE68A",
        "borderRadius": "6px",
        "padding": "16px",
        "marginBottom": "16px",
        "display": "flex",
        "flexDirection": "column",
        "gap": "6px",
        "description": "Container destacado para plano atual"
      },
      "planName": {
        "fontSize": "16px",
        "fontWeight": "600",
        "color": "#92400E"
      },
      "planStatus": {
        "display": "flex",
        "alignItems": "center",
        "gap": "6px",
        "fontSize": "13px",
        "color": "#6B7280"
      },
      "statusIcon": {
        "size": "16px",
        "color": "#10B981"
      }
    },

    "settingRow": {
      "container": {
        "display": "flex",
        "justifyContent": "space-between",
        "alignItems": "center",
        "padding": "12px 16px",
        "background": "#FAFAFA",
        "backgroundHover": "#F3F4F6",
        "border": "1px solid #E5E7EB",
        "borderRadius": "6px",
        "transition": "background 150ms ease",
        "description": "Linha de configuração com controle inline"
      },
      "left": {
        "display": "flex",
        "alignItems": "center",
        "gap": "12px"
      },
      "icon": {
        "size": "20px",
        "color": "#6B7280",
        "strokeWidth": "2px"
      },
      "label": {
        "fontSize": "14px",
        "fontWeight": "500",
        "color": "#374151"
      },
      "right": {
        "description": "Container para controles (toggle, select)"
      }
    },

    "toggleSwitch": {
      "track": {
        "width": "44px",
        "height": "24px",
        "borderRadius": "12px",
        "backgroundOff": "#E5E7EB",
        "backgroundOn": "#10B981",
        "cursor": "pointer",
        "transition": "background 200ms ease",
        "description": "Track do toggle switch"
      },
      "thumb": {
        "size": "20px",
        "borderRadius": "50%",
        "background": "#FFFFFF",
        "shadow": "0 1px 3px 0 rgba(0, 0, 0, 0.1)",
        "translateOff": "2px",
        "translateOn": "22px",
        "transition": "transform 200ms ease",
        "description": "Thumb móvel do toggle"
      }
    },

    "select": {
      "height": "36px",
      "minWidth": "140px",
      "padding": "0 12px",
      "background": "#FFFFFF",
      "border": "1px solid #D1D5DB",
      "borderRadius": "6px",
      "fontSize": "14px",
      "color": "#374151",
      "focusBorder": "#3B82F6",
      "focusRing": "0 0 0 3px rgba(59, 130, 246, 0.1)",
      "cursor": "pointer",
      "description": "Select dropdown para opções"
    },

    "secondaryText": {
      "fontSize": "12px",
      "fontWeight": "400",
      "color": "#6B7280",
      "description": "Texto secundário (emails, informações extras)"
    }
  },

  "interactions": {
    "transitions": {
