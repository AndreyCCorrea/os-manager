      },
      "secondaryInfo": {
        "size": "12px",
        "weight": "400",
        "lineHeight": "16px",
        "letterSpacing": "0",
        "usage": "Informações secundárias (emails, etc)",
        "color": "#6B7280"
      },
      "planName": {
        "size": "16px",
        "weight": "600",
        "lineHeight": "22px",
        "letterSpacing": "0",
        "usage": "Nome do plano de assinatura",
        "color": "#92400E"
      }
