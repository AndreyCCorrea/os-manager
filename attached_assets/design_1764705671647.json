{
  "designSystem": {
    "name": "Dashboard Configurações - Design System",
    "version": "2.0",
    "description": "Sistema de design para página de configurações com layout vertical stacked, cards full-width e organização sequencial por categorias",
    "scope": "Main content area only - sidebar já está finalizada"
  },

  "designPrinciples": {
    "verticalFlow": "Layout vertical com cards empilhados sequencialmente para leitura linear",
    "singleColumn": "Uma coluna centralizada com largura máxima para foco e legibilidade",
    "colorCoding": "Cada categoria possui cor temática única para identificação rápida",
    "scannable": "Interface escaneável com ícones claros e hierarquia visual forte",
    "inlineSettings": "Configurações ajustáveis diretamente no card (toggles, selects) sem navegação",
    "mixedInteraction": "Combinação de navegação (chevron) e configuração inline (controles)"
  },

